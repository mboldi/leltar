<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btShowList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eszközlista"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btShowAddDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eszköz hozzáadás"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btShowList" />

    <Button
        android:id="@+id/btShowAddRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bérlés felvétele"
        app:layout_constraintBottom_toTopOf="@+id/btShowList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btShowRentList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bérlések listája"
        app:layout_constraintBottom_toTopOf="@+id/btShowList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btShowAddRent" />

</androidx.constraintlayout.widget.ConstraintLayout>